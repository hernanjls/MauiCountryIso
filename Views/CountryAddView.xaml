<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCountryISO.Views.CountryAddView"
             Title="Add Country">
    <StackLayout VerticalOptions="Center"
             Spacing="20"
             Padding="20">

        <Entry Text="{Binding SelectedItem.Name}"
           FontSize="24"
           Placeholder="Name" />

        <Entry Text="{Binding SelectedItem.Alpha_2}"
           FontSize="24"
           Placeholder="Alpha2 Code" />

        <Entry Text="{Binding SelectedItem.Alpha_3}"
           FontSize="24"
           Placeholder="Alpha3 Code" />

        <Entry Text="{Binding SelectedItem.Code}"
            FontSize="24"
            Placeholder="Code" />

        <Entry Text="{Binding SelectedItem.Iso_3166_2}"
            FontSize="24"
            Placeholder="Iso 3166_2" />

        <Button Text="Add Country"
            BackgroundColor="DodgerBlue"
            TextColor="White"
            FontSize="20"
            Command="{Binding SendItemCommand}" />

    </StackLayout>
    
</ContentPage>
    
    